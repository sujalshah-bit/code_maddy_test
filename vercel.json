{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      },
      {
        "src": "server/server.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/socket.io/(.*)",
        "dest": "server/server.ts"
      },
      {
        "src": "/health",
        "dest": "server/server.ts"
      },
      {
        "src": "/rooms",
        "dest": "server/server.ts"
      },
      {
        "src": "/api/(.*)",
        "dest": "server/server.ts"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/$1"
      }
    ]
  }